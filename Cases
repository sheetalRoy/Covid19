		$( document ).ready(function() {
		alert('Load No. of cases');
			$.ajax({
                type: "GET",
                url: "https://corona.lmao.ninja/countries?sort=cases",
                dataType: "json",
                success: function (result) {
				
					var str = '<table class="table table-bordered"><thead style="background-color:#4fa9d4"><th>Sl.No</th><th>Country</th><th>Total Cases</th><th>Today Cases</th><th>Deaths</th><th>Recovered</th><th>Active</th></thead>';
				<!--	var str = str + '<td>' + result.cases +'</td><td>'+ result.deaths +'</td><td>'+ result.recovered +'</td><td>' + result.active +'</td>'todayCases; -->
					for(var i = 0; i < result.length; i++){
					var j = i+1;
					var str = str + '<tr><td>'+ j +'</td><td>' + result[i].country +'</td><td>' +result[i].cases+ '</td><td>' +result[i].todayCases+'</td><td>' + result[i].deaths +'</td><td>'+ result[i].recovered +'</td><td>' + result[i].active +'</td></tr>';
					}
					var str = str + '</table>';
					$('#appendRow').empty().append(str)
                    
                },
                error: function (xhr, status, error) {
                    alert("err");
                }
            });
		});
		
		
